root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
charset = utf-8

[*.py]
indent_style = space
indent_size = 4
charset = utf-8
insert_final_newline = true
max_line_length = 79

[*.yaml, *.yml]
indent_style = space
indent_size = 2
insert_final_newline = true
